<%= form_for recipe do |f| %>
  <div class="form-group">
    <label>レシピ名</label>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <label>作り方</label>
    <%= f.text_area :body, class: "form-control" %>
  </div>

  <div class="form-group">
    <label>写真</label><br/>   
    <%= f.attachment_field :image, class: "input" %>
  </div>

  <div>
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>